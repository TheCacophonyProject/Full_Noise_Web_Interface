doctype html
html
  head
    title Devices
    include includes/base.pug
    //- link(href='/stylesheets/devices.css', rel='stylesheet', media='screen')
    script(type='text/javascript', src='/javascripts/devices.js')
  
  body
    include includes/navbar.pug

    .container
      .row
        .col-12
          h2#device-title Device

        .col-12.col-sm-6#devices
          h4 Devices
          table.table.table-striped#devices-table
            tr
              th ID
              th Name
              th Admin

        .col-12.col-sm-6#users
          h4 Device Users
          table.table.table-striped#users-table
            tr
              th Username
              th Admin

        .col-12#device-admin
          h4 Device Admin
          .row
            .col-sm-6
              .form-group.form-row
                .col-8
                  label Add user:
                  input.form-control#add-user-username(placeholder='username')
                .col-4
                  label Admin:
                  input.form-check#add-user-as-admin(type='checkbox')
              .form-group
                input.btn.btn-block#add-user-to-group(type='button', value='Add', onClick='addUserToDeviceButton()')
            .col-sm-6
              .form-group
                label Remove user:
                input.form-control#remove-user-username(placeholder='username')
              .form-group
                input.btn.btn-block#remove-user(type='button', value='Remove', onclick='removeUserFromDeviceButton()')

    include includes/footer.pug
